<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/sessionTotalViewContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/session_view_padding">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/sessionTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Some Placeholder Text"
                android:textColor="@color/midnightBlue"
                android:textSize="@dimen/session_text_size"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/sessionTotalTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="10dp"
                android:layout_below="@id/sessionTitleTextView"
                android:text="Some Placeholder Text"
                android:textColor="@color/midnightBlue"
                android:textSize="@dimen/session_total_text_size" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp">

            <TextView
                android:id="@+id/sessionTotalStartDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/midnightBlue"
                android:textSize="@dimen/session_text_size" />
            <View
                android:layout_width="15dp"
                android:layout_height="1px"
                android:layout_margin="5dp"
                android:background="@color/midnightBlue"
                android:id="@+id/line"
                android:layout_centerInParent="true"
                android:layout_below="@id/sessionTotalStartDate">

            </View>

            <TextView
                android:id="@+id/sessionTotalEndDate"
                android:layout_below="@id/line"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/midnightBlue"
                android:textSize="@dimen/session_text_size" />

        </RelativeLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/sessionTotalViewContainer"
        android:background="@color/wetAsphalt"></View>

</LinearLayout>